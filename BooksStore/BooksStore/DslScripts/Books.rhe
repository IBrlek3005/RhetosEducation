    '(parameter, repository, userInfo)=>
    {
        for(int i=0;i<parameter.NumberOfBooks; i++)
        {
            var newBook= new Bookstore.Book { Code="B+++", Title= parameter.Title };
            repository.Bookstore.Book.Insert(newBook);
        }
    }'
